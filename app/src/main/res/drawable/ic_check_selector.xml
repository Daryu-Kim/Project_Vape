<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item android:width="24dp" android:height="24dp">
                <shape android:shape="oval">
                    <gradient
                        android:endColor="@color/gradient_red"
                        android:startColor="@color/gradient_blue"
                        android:type="linear"
                        android:angle="270"/>
                    <padding
                        android:left="5dp"
                        android:bottom="5dp"
                        android:right="5dp"
                        android:top="5dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_check_32dp"/>
        </layer-list>

    </item>

    <item android:state_checked="false">
        <layer-list>
            <item android:width="24dp" android:height="24dp">
                <shape android:shape="oval">
                    <solid android:color="@color/DARK_Third"/>
                    <padding
                        android:left="5dp"
                        android:bottom="5dp"
                        android:right="5dp"
                        android:top="5dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_check_32dp"/>
        </layer-list>
    </item>

</selector>